- $currentApp = "mediaviews"
!!!
%html
  %head
    - include '../_head.php'
    %title= $I18N->msg( 'mediaviews-title' )
  %body.clearfix(class="#{$rtl} #{$currentApp}")
    %div.text-center.site-notice-wrapper
      %div.site-notice
        - include "../_browser_check.php"

    - include '../_header.php'

    %aside.col-lg-2.col-md-2.page-selector
      %header.text-center
        %h4 Options
      %div.page-selector--container
        %div
          %label(for="range-input")
            = $I18N->msg( 'dates' )
          %input.form-control.aqs-date-range-selector#range-input
        %div
          %label(for="data-source-select")
            = $I18N->msg( 'source' )
          %select.form-control#data-source-select
            %option(value="filename")
              Filename
            %option(value="category")
              = $I18N->msg( 'category' )

    %main.col-lg-8.col-md-10
      / Media selector
      %div
        %label(for="site-input")
          = $I18N->msg( 'projects' )
        %small.text-muted.num-pages-info
          = $I18N->msg( 'num-pages-info', [ 'variables' => [ 10 ] ] )
        %span.clear-pages.pull-right
          &#x2715; Clear
        %select.aqs-select2-selector.col-lg-12.invisible#site-input(multiple="multiple")

      - include "../_data_links.php"

      / Chart
      %div.chart-container
        %canvas.aqs-chart

      %div.message-container.col-lg-12

    %aside.col-lg-2.visible-lg-block.summary-column
      %header.text-center
        %h4 Totals
      %div.summary-column--container
        %div.chart-legend.col-lg-12.clearfix

    %output.col-lg-10.col-lg-offset-1
      %h4.single-page-stats.text-center
      %h5.single-page-ranking.text-center
      %div.single-page-legend.hidden-lg.col-md-4.col-md-offset-4.tm
      :php
        $columns = array(
          'title' => 'page-title',
          'views' => 'views',
          'average' => 'daily-views',
          'edits' => 'edits',
          'editors' => 'editors',
          'size' => 'size',
          'protection' => 'protection',
          'watchers' => 'watchers'
        );
      %table.table.table-hover.table-view
        %thead.table-view--header
          %tr
            %th
            - foreach( $columns as $column => $translation )
              %th(class="table-view--#{$column}")
                %span(class="sort-link sort-link--#{$column}" data-type="#{$column}")
                  = $I18N->msg( $translation )
                  %span.glyphicon.glyphicon-sort
            %th
              %span Links
        %tbody.output-list

    - include "../_footer.php"

    - include "../_modals.php"
